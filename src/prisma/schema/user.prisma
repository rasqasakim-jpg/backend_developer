model User {
    id            Int    @id @default(autoincrement())
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    deletedAt     DateTime? @db.Timestamptz()
    
    name          String
    email         String @unique
    password_hash String
    role String @default("USER")

    orders Order[]

    @@map("users")
}