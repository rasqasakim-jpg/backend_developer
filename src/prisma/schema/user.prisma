model User {
    id            Int    @id @default(autoincrement())
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    deletedAt     DateTime? @db.Timestamptz()
    
    username      String @unique
    email         String @unique
    password_hash String
    role          String @default("USER")

    profile       Profile?
    orders Order[]

    @@map("users")
}